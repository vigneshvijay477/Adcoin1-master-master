<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Balance">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/app_ic" />

        <TextView
            android:id="@+id/c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/logo"
            android:text="@string/title"
            android:textColor="@color/bt_nv_color"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/c_name"
            android:text="Balance"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bal_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/balance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:background="@drawable/balance" />

        <TextView
            android:id="@+id/cur_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bal_img"
            android:layout_marginStart="20dp"
            android:layout_marginTop="76dp"
            android:layout_toEndOf="@+id/logo"
            android:text="Current Balance : "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bal_amo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cur_bal"
            android:layout_alignBottom="@+id/cur_bal"
            android:layout_toEndOf="@+id/cur_bal"
            android:text=" â‚¹ 250"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>
